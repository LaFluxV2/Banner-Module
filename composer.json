{
  "name": "ExtensionsValley/Banners",
  "type": "laflux-module",
  "version" : "1.0.0",
  "paid": "false",
  "description": "Banner Component for managing banners in the front end",
  "keywords": [
    "ExtensionsValley",
    "Banners",
    "laflux",
    "laravel"
  ],
  "homepage": "https://github.com/LaFlux/Banners",
  "license": "MIT",
  "authors": [
    {
       "name": "LaFlux",
       "email": "support@laflux.com",
       "homepage": "http://laflux.com",
       "role": "Founder"
    }
  ],
   "require": {
    "illuminate/support": "~5.1",
    "php": "~5.6|~7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*",
    "scrutinizer/ocular": "~1.1"
  },
  "autoload": {
    "psr-4": {
      "ExtensionsValley\\Banners\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ExtensionsValley\\Banners\\Test\\": "tests"
    }
  },
 "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
